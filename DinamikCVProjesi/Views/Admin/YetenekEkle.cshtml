@using DinamikCVProjesi.Models.Entity
@model List<TBL_Yetenek>
@{
    ViewBag.Title = "YetenekEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>YetenekEkle</h2>
<br />

<form action="~/Admin/YetenekEKle" method="post">

    <label for="YETENEK">YETENEK</label>
    <input class="form-control" type="text" name="YETENEK" id="YETENEK" style="width:60%" required />
    <br />
    <label for="YUZDE">YUZDE</label>
    <input class="form-control" type="text" name="YUZDE" id="YETEYUZDENEK" style="width:60%" required />
    <br />
    <label for="DURUM">DURUM</label>
    <div class="form-check-inline">
        <div class="form-check">
            <input class="form-check-input" id="durumAktif" name="DURUM" type="radio" value="True">
            <label class="form-check-label" for="durumAktif">Aktif</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" id="durumPasif" name="DURUM" type="radio" value="False">
            <label class="form-check-label" for="durumPasif">Pasif</label>
        </div>
    </div>
    <br />
    <input type="submit" value="Ekle" class="btn btn-primary btn-sm" />
</form>