@model DinamikCVProjesi.Models.Entity.TBL_Hakkımda
@{
    ViewBag.Title = "HakkımdaGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımda Getir</h2>
<br />

@using (Html.BeginForm("HakkımdaGüncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @style = "witdt = 60%", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.AD)
    @Html.TextBoxFor(x => x.AD, new { @class = "form-control", @style = "witdt = 60%" })
    <br />
    @Html.LabelFor(x => x.SOYAD)
    @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control", @style = "witdt = 60%" })
    <br />
    @Html.LabelFor(x => x.ADRES)
    @Html.TextBoxFor(x => x.ADRES, new { @class = "form-control", @style = "witdt = 60%" })
    <br />
    @Html.LabelFor(x => x.TELEFON)
    @Html.TextBoxFor(x => x.TELEFON, new { @class = "form-control", @style = "witdt = 60%" })
    <br />
    @Html.LabelFor(x => x.MAİL)
    @Html.TextBoxFor(x => x.MAİL, new { @class = "form-control", @style = "witdt = 60%" })
    <br />
    @Html.LabelFor(x => x.ACIKLAMA)
    @Html.TextBoxFor(x => x.ACIKLAMA, new { @class = "form-control", @style = "witdt = 60%" })
    <br />
    @Html.LabelFor(x => x.RESİM)
    @Html.TextBoxFor(x => x.RESİM, new { @class = "form-control", @style = "witdt = 60%" })
    <br />
    @Html.LabelFor(x => x.DURUM)
    <div class="form-check-inline">
        <div class="form-check">
            @Html.RadioButtonFor(x => x.DURUM, true, new { @class = "form-check-input", id = "durumAktif" })
            <label class="form-check-label" for="durumAktif">Aktif</label>
        </div>
        <div class="form-check">
            @Html.RadioButtonFor(x => x.DURUM, false, new { @class = "form-check-input", id = "durumPasif" })
            <label class="form-check-label" for="durumPasif">Pasif</label>
        </div>
    </div>
    <br />
    <input type="submit" value="Güncelle" class="btn btn-success btn-sm" />
}