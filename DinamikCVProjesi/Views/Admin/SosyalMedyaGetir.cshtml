@model DinamikCVProjesi.Models.Entity.TBL_SosyalMedya
@{
    ViewBag.Title = "SosyalMedyaGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>SosyalMedyaGetir</h2>

@using (Html.BeginForm("SosyalMedyaGüncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @style = "witdt = 60%", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.AD)
    @Html.TextBoxFor(x => x.AD, new { @class = "form-control", @style = "witdt = 60%" })
    <br />
    @Html.LabelFor(x => x.LİNK)
    @Html.TextBoxFor(x => x.LİNK, new { @class = "form-control", @style = "witdt = 60%" })
    <br />
    @Html.LabelFor(x => x.ICON)
    @Html.TextBoxFor(x => x.ICON, new { @class = "form-control", @style = "witdt = 60%" })
    <br />
    @Html.LabelFor(x => x.DURUM)
    <div class="form-check-inline">
        <div class="form-check">
            @Html.RadioButtonFor(x => x.DURUM, true, new { @class = "form-check-input", id = "durumAktif" })
            <label class="form-check-label" for="durumAktif">Aktif</label>
        </div>
        <div class="form-check">
            @Html.RadioButtonFor(x => x.DURUM, false, new { @class = "form-check-input", id = "durumPasif" })
            <label class="form-check-label" for="durumPasif">Pasif</label>
        </div>
    </div>
    <br />
    <input type="submit" value="Güncelle" class="btn btn-primary btn-sm" />
}

