
@{
    ViewBag.Title = "EgitimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Eğitim Ekle</h2>
<br />

<form action="~/Admin/EgitimEkle" method="post">
    <label for="BASLIK">BASLIK</label>
    <input class="form-control" type="text" name="BASLIK" id="BASLIK" style="width:60%" required />
    <br />
    <label for="ALTBASLIK1">ALTBASLIK1</label>
    <input class="form-control" type="text" name="ALTBASLIK1" id="ALTBASLIK1" style="width:60%" required />
    <br />
    <label for="ALTBASLIK2">ALTBASLIK2</label>
    <input class="form-control" type="text" name="ALTBASLIK2" id="ALTBASLIK2" style="width:60%" required />
    <br />
    <label for="NOT_ORT">NOT ORTALAMASI</label>
    <input class="form-control" type="text" name="NOT_ORT" id="NOT_ORT" style="width:60%" required />
    <br />
    <label for="TARİH">TARİH</label>
    <input class="form-control" type="text" name="TARİH" id="TARİH" style="width:60%" required />
    <br />
    <label for="DURUM">DURUM</label>
    <div class="form-check-inline">
        <div class="form-check">
            <input class="form-check-input" id="durumAktif" name="DURUM" type="radio" value="True">
            <label class="form-check-label" for="durumAktif">Aktif</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" id="durumPasif" name="DURUM" type="radio" value="False">
            <label class="form-check-label" for="durumPasif">Pasif</label>
        </div>
    </div>
    <br />
    <input type="submit" value="Ekle" class="btn btn-primary btn-sm" />
</form>

