@model DinamikCVProjesi.Models.Entity.TBL_Admin
@{
    ViewBag.Title = "AdminGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AdminGetir</h2>
<br />
<form action="~/Admin/AdminGüncelle" method="post">
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @style = "witdt = 60%", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.KULLANICIAD)
    @Html.TextBoxFor(x => x.KULLANICIAD, new { @class = "form-control", @style = "witdt = 60%" })
    <br />
    @Html.LabelFor(x => x.SIFRE)
    @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control", @style = "witdt = 60%" })
    <br />
    @Html.LabelFor(x => x.DURUM)
    <div class="form-check-inline">
        <div class="form-check">
            @Html.RadioButtonFor(x => x.DURUM, true, new { @class = "form-check-input", id = "durumAktif" })
            <label class="form-check-label" for="durumAktif">Aktif</label>
        </div>
        <div class="form-check">
            @Html.RadioButtonFor(x => x.DURUM, false, new { @class = "form-check-input", id = "durumPasif" })
            <label class="form-check-label" for="durumPasif">Pasif</label>
        </div>
    </div>
    <br />
    <input type="submit" value="Güncelle" class="btn btn-primary btn-sm" />
</form>

