@model DinamikCVProjesi.Models.Entity.TBL_Diller
@{
    ViewBag.Title = "DilEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Dil Ekle</h2>
<br />

@using (Html.BeginForm("DilEkle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.AD)
    @Html.TextBoxFor(x => x.AD, new { @class = "form-control", @style = "width : 60%" })
    <br />
    @Html.LabelFor(x => x.OKUMA)
    @Html.DropDownListFor(x => x.OKUMA, (IEnumerable<SelectListItem>)ViewBag.DilBilgisi, new { @class = "form-control", @style = "width:60%" })
    <br />
    @Html.LabelFor(x => x.YAZMA)
    @Html.DropDownListFor(x => x.YAZMA, (IEnumerable<SelectListItem>)ViewBag.DilBilgisi, new { @class = "form-control", @style = "width:60%" })
    <br />
    @Html.LabelFor(x => x.KONUSMA)
    @Html.DropDownListFor(x => x.KONUSMA, (IEnumerable<SelectListItem>)ViewBag.DilBilgisi, new { @class = "form-control", @style = "width:60%" })
    <br />
    @Html.LabelFor(x => x.DİNLEME)
    @Html.DropDownListFor(x => x.DİNLEME, (IEnumerable<SelectListItem>)ViewBag.DilBilgisi, new { @class = "form-control", @style = "width:60%" })
    <br />
    @Html.LabelFor(x => x.DURUM)
    <div class="form-check-inline">
        <div class="form-check">
            @Html.RadioButtonFor(x => x.DURUM, true, new { @class = "form-check-input", id = "durumAktif" })
            <label class="form-check-label" for="durumAktif">Aktif</label>
        </div>
        <div class="form-check">
            @Html.RadioButtonFor(x => x.DURUM, false, new { @class = "form-check-input", id = "durumPasif" })
            <label class="form-check-label" for="durumPasif">Pasif</label>
        </div>
    </div>
    <br />
    <input type="submit" value="Ekle" class="btn btn-success btn-sm" />
}

