@model DinamikCVProjesi.Models.Entity.TBL_Egitimler
@{
    ViewBag.Title = "EgitimGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>EgitimGetir</h2>

@using (Html.BeginForm("EgitimGüncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @style = "width:60%", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.BASLIK)
    @Html.TextBoxFor(x => x.BASLIK, new { @class = "form-control", @style = "width:60%" })
    <br />
    @Html.LabelFor(x => x.ALTBASLIK1)
    @Html.TextBoxFor(x => x.ALTBASLIK1, new { @class = "form-control", @style = "width:60%" })
    <br />
    @Html.LabelFor(x => x.ALTBASLIK2)
    @Html.TextBoxFor(x => x.ALTBASLIK2, new { @class = "form-control", @style = "width:60%" })
    <br />
    @Html.LabelFor(x => x.NOT_ORT)
    @Html.TextBoxFor(x => x.NOT_ORT, new { @class = "form-control", @style = "width:60%" })
    <br />
    @Html.LabelFor(x => x.TARİH)
    @Html.TextBoxFor(x => x.TARİH, new { @class = "form-control", @style = "width:60%" })
    <br />
    @Html.LabelFor(x => x.DURUM)
    <div class="form-check-inline">
        <div class="form-check">
            @Html.RadioButtonFor(x => x.DURUM, true, new { @class = "form-check-input", id = "durumAktif" })
            <label class="form-check-label" for="durumAktif">Aktif</label>
        </div>
        <div class="form-check">
            @Html.RadioButtonFor(x => x.DURUM, false, new { @class = "form-check-input", id = "durumPasif" })
            <label class="form-check-label" for="durumPasif">Pasif</label>
        </div>
    </div>
    <br />
    <input type="submit" value="Güncelle" class="btn btn-success btn-sm" />
}

