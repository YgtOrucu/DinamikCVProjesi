@using DinamikCVProjesi.Models.Entity
@model List<TBL_Admin>
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        th {
            background: #4e73df;
            color: #fff;
        }

        .card-header {
            background-color: lightgrey;
            color: black;
        }

        .card-header {
            font-family: math;
            font-size: 25px;
        }
        /* Modal arka plan blur efekti */
        .modal.fade .modal-dialog {
            transition: transform .3s ease-out;
        }

        .modal-backdrop.show {
            backdrop-filter: blur(4px);
        }

        /* Modal kutusu */
        .modal-content {
            border-radius: 18px !important;
            border: none;
            background: #ffffff;
            box-shadow: 0 10px 35px rgba(0,0,0,0.12);
        }

        /* Başlık */
        .modal-title {
            font-weight: 600;
            color: #333;
        }

        /* Input alanları */
        .form-control {
            border-radius: 12px;
            border: 1px solid #ddd;
            padding: 10px 14px;
            transition: all .2s ease;
        }

            .form-control:focus {
                border-color: #7b57ff;
                box-shadow: 0 0 0 3px rgba(123, 87, 255, 0.2);
            }

        /* Label */
        .form-label {
            font-weight: 500;
            color: #444;
        }

        /* Button */
        .btn-primary {
            background: #7b57ff;
            border: none;
            border-radius: 10px;
            padding: 6px 14px;
            transition: all .2s ease;
            margin: 10px 0;
        }

            .btn-primary:hover {
                background: #6a46f7;
                transform: translateY(-1px);
            }
    </style>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Admin</h3>
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>KULLANICI ADI</th>
                                            <th>ŞİFRE</th>
                                            <th>DURUM</th>
                                            <th>DÜZENLE</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.KULLANICIAD</td>
                                                <td>@item.SIFRE</td>
                                                <td>
                                                    @if ((bool)item.DURUM)
                                                    {
                                                        <span class="badge bg-success text-sm">Aktif</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger text-sm">Pasif</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a href="~/Admin/AdminGetir/@item.ID"
                                                       class="btn btn-warning btn-sm">Düzenle</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <button class="btn btn-primary" data-toggle="modal" data-target="#modal1">Ekle</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="modal fade" id="modal1" tabindex="-1" aria-labelledby="modal1Label" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content border-0 shadow-lg">
                    <div class="modal-header">
                        <h2 class="modal-title" id="modal1Label">Sosyal Medya Ekleme Paneli</h2>
                    </div>

                    <form method="post" action="~/Admin/AdminEkle">
                        <div class="modal-body">

                            <div class="mb-3">
                                <label for="KULLANICIAD" class="form-label">Kullanıcı Adı</label>
                                <input type="text" name="KULLANICIAD" id="KULLANICIAD" class="form-control">
                            </div>

                            <div class="mb-3">
                                <label for="SIFRE" class="form-label">Şifre</label>
                                <input type="text" name="SIFRE" id="SIFRE" class="form-control">
                            </div>
                            <br />
                            <label for="DURUM" class="form-label">DURUM</label>
                            <div class="form-check-inline">
                                <div class="form-check">
                                    <input class="form-check-input" id="durumAktif" name="DURUM" type="radio" value="True">
                                    <label class="form-check-label" for="durumAktif">Aktif</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" id="durumPasif" name="DURUM" type="radio" value="False">
                                    <label class="form-check-label" for="durumPasif">Pasif</label>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary btn-sm">Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
