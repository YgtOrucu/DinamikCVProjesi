@model DinamikCVProjesi.Models.Entity.TBL_Yetenek
@{
    ViewBag.Title = "YetenekGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>YetenekGetir</h2>
<br />

@using (Html.BeginForm("YetenekGüncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @style = "witdt = 60%" })
    <br />
    @Html.LabelFor(x => x.YETENEK)
    @Html.TextBoxFor(x => x.YETENEK, new { @class = "form-control", @style = "witdt = 60%" })
    <br />
    @Html.LabelFor(x => x.YUZDE)
    @Html.TextBoxFor(x => x.YUZDE, new { @class = "form-control", @style = "witdt = 60%" })
    <br />
    @Html.LabelFor(x => x.DURUM)
    <div class="form-check-inline">
        <div class="form-check">
            @Html.RadioButtonFor(x => x.DURUM, true, new { @class = "form-check-input", id = "durumAktif" })
            <label class="form-check-label" for="durumAktif">Aktif</label>
        </div>
        <div class="form-check">
            @Html.RadioButtonFor(x => x.DURUM, false, new { @class = "form-check-input", id = "durumPasif" })
            <label class="form-check-label" for="durumPasif">Pasif</label>
        </div>
    </div>
    <br />
    <input type="submit" value="Güncelle" class="btn btn-primary" />
}
