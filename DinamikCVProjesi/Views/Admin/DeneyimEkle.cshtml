@model DinamikCVProjesi.Models.Entity.TBL_Deneyimler
@{
    ViewBag.Title = "DeneyimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Deneyim Ekle</h2>
<br />

@using (Html.BeginForm("DeneyimEkle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.BASLIK)
    @Html.TextBoxFor(x => x.BASLIK, new { @class = "form-control", @style = "width: 60%" })
    <br />
    @Html.LabelFor(x => x.ALTBASLIK)
    @Html.TextBoxFor(x => x.ALTBASLIK, new { @class = "form-control", @style = "width: 60%" })
    <br />
    @Html.LabelFor(x => x.ACIKLAMA)
    @Html.TextAreaFor(x => x.ACIKLAMA, 10, 0, new { @class = "form-control", @style = "width: 60%" })
    <br />
    @Html.LabelFor(x => x.TARİH)
    @Html.TextBoxFor(x => x.TARİH, new { @class = "form-control", @style = "width: 60%" })
    <br />
    @Html.LabelFor(x => x.Kullanılan_Diller)
    @Html.TextBoxFor(x => x.Kullanılan_Diller, new { @class = "form-control", @style = "width: 60%" })
    <br />
    @Html.LabelFor(x => x.DURUM)
    @Html.DropDownListFor(x => x.DURUM, (List<SelectListItem>)ViewBag.Durum, "Seçiniz", new { @class = "form-control", @style = "width: 60%" })
    <br />
    <input type="submit" value="Ekle" class="btn btn-success" />
}

