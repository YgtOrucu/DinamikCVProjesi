@using DinamikCVProjesi.Models.Entity
@model List<TBL_Hobilerim>

<section class="resume-section" id="interests">
    <div class="resume-section-content">
        <h2 class="mb-5">Hobiler</h2>

        <div class="hobi-grid">
            @foreach (var p in Model)
            {
                <div class="hobi-card">
                    <div class="hobi-icon">⭐</div>
                    <div class="hobi-text">@p.ACIKLAMA1</div>
                </div>
            }
        </div>
    </div>
</section>

<style>
    .hobi-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 30px;
        padding-top: 10px;
    }

    .hobi-card {
        background: rgba(255,255,255,0.05);
        border-radius: 14px;
        padding: 18px 16px;
        display: flex;
        align-items: center;
        gap: 14px;
        backdrop-filter: blur(4px);
        transition: 0.3s ease;
        border: 1px solid rgba(255,255,255,0.06);
    }

        .hobi-card:hover {
            transform: translateY(-4px);
            background: rgba(255,255,255,0.12);
        }

    .hobi-icon {
        font-size: 22px;
        width: 40px;
        height: 40px;
        border-radius: 10px;
        background: rgba(255,255,255,0.08);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hobi-text {
        font-size: 16px;
        font-weight: 500;
    }
</style>
