<section class="resume-section" id="contact">
    <div class="resume-section-content">
        <h2 class="mb-5">İLETİŞİM</h2>

        <form id="contact-form" class="contact-form" method="post">

            <div class="row">
                <div class="form-group">
                    <label for="fullname">Ad Soyad</label>
                    <input type="text" id="fullname" name="ADSOYAD" required>
                </div>

                <div class="form-group">
                    <label for="email">Mail</label>
                    <input type="email" id="email" name="MAİL" required>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label for="subject">Başlık</label>
                    <input type="text" id="subject" name="KONU" required>  
                </div>
                <div class="form-group">
                    <label for="topic">Konu</label>
                    <textarea id="topic" name="MESAJ" rows="4" required></textarea>
                </div>
            </div>
            <div class="row btn-row">
                <button type="submit" class="send-btn">Gönder</button>
            </div>

        </form>
    </div>
</section>
