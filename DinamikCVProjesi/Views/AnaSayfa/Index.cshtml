@using DinamikCVProjesi.Models.Entity
@model List<TBL_Hakkımda>
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Muhsin Yiğit Örücü - Web Application</title>
    <link rel="icon" type="image/x-icon" href="~/İmages/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/CSS/DinamikCV.css" rel="stylesheet" />
</head>
<body id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="sideNav" style="background-color:darkred">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">
            <span class="d-block d-lg-none">Muhsin Yiğit Örücü</span>
            <span class="d-none d-lg-block"><img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="~/İmages/Cv.jpeg" alt="RESİM" /></span>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#about">Hakkımda</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#experience">DENEYİMLER</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#education">EĞİTİM</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#language">DİLLER</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#course">Kurslar</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#skills">Yetenek&Becerİler</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#interests">Hobİler</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#awards">Sertİfİkalar</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#contact">İLETİŞİM</a></li>
            </ul>
        </div>
    </nav>
    <!-- Page Content-->
    <div class="container-fluid p-0">
        @foreach (var item in Model)
        {
            <section class="resume-section" id="about">
                <div class="resume-section-content">
                    <h1 class="mb-0">
                        @item.AD
                        <span class="text" style="color:darkred">@item.SOYAD</span>
                    </h1>
                    <div class="subheading mb-5">
                        @item.ADRES
                        <span style="color: darkred; font-size:2rem">·</span>
                        @item.TELEFON
                        <span style="color: darkred; font-size:2rem">·</span>
                        23.11.1993
                        <span style="color: darkred; font-size:2rem">·</span>

                        <a style="color:darkred;">@item.MAİL</a>
                    </div>
                    <p class="lead mb-5">@item.ACIKLAMA</p>
                    <div class="social-icons">
                        <a class="social-icon" href="https://www.linkedin.com/in/yiğitörücü-09214911a" target="_blank">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </div>
            </section>
        }
        <hr class="m-0" />
        @Html.Action("Deneyim", "AnaSayfa")
        <hr class="m-0" />
        @Html.Action("Egitimler", "AnaSayfa")
        <hr class="m-0" />
        @Html.Action("Yetenekler", "AnaSayfa")
        <hr class="m-0" />
        @Html.Action("Hobiler", "AnaSayfa")
        <hr class="m-0" />
        @Html.Action("Sertifikalar", "AnaSayfa")
        <hr class="m-0" />
        @Html.Action("Iletısım", "AnaSayfa")
    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Third party plugin JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/JS/DinamikCV.js"></script>
</body>
</html>
