@using DinamikCVProjesi.Models.Entity
@model List<DillerViewModel>
<section class="resume-section" id="language">
    <div class="resume-section-content">
        <h2 class="mb-5">DİLLER</h2>


        <table class="language-table">
            <thead>
                <tr>
                    <th class="invisible-header">&nbsp;</th>
                    <th>OKUMA</th>
                    <th>YAZMA</th>
                    <th>DİNLEME</th>
                    <th>KONUŞMA</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AD</td>
                        <td>@item.OKUMA</td>
                        <td>@item.YAZMA</td>
                        <td>@item.DİNLEME</td>
                        <td>@item.KONUSMA</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

<style>
    .language-table {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        .language-table th, .language-table td {
            border: 1px solid #ddd;
            padding: 12px 15px;
            text-align: center;
        }

        .language-table th {
            background-color: darkred;
            color: white;
            text-transform: uppercase;
        }

        .language-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .language-table tr:hover {
            background-color: #e9f2ff;
        }

        .language-table td:first-child {
            font-weight: 600;
            text-align: left;
        }

        .language-table th.invisible-header {
            color: transparent; /* yazı görünmez */
            border: none; /* istersen border da kaldırabilirsin */
            background: none; /* arkaplan da yok */
            width: 150px; /* dil adı hücresinin genişliğini sabitle */
        }
</style>
